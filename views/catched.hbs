
<div class="container">
<h1> Catched Critters</h1>
</div>

{{#each critters}}

<div class="cards">
    
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src={{image}}  alt={{name}}>
  {{!-- <div class="card-body"> --}}
    <h5 class="card-title">{{name}}</h5>
 <form method="POST" action="/catched/delete/{{id}}">
 <button type="submit" id="unFavButton">Remove critter</button>
 </form> 
</div>
 
</div>
</div>
{{/each}}



