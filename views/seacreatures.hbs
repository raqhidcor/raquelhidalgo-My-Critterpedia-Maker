


<div class="container">

<div class="sea">

<div class="row row-cols-1 row-cols-s-2 row-cols-md-3 g-3" >

{{#each seaInfo}}
  <div class="col" style="width: 10rem">
    <img src="{{this.icon_uri}}"  class="card-img-top" alt="{{this.name.name-USen}}">
    <div class="card-body text-center">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-creatures" data-toggle="modal" data-target="#{{this.id}}">
        More info
      </button>
    </div>
  </div>
  
  <!-- Modal -->
  
  <div class="modal fade black" id="{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">{{this.name.name-USen}}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">   
          <img src={{this.image_uri}} alt="{{this.name.name-USen}}">
          <p> Speed: {{this.speed}}</p>
          <p> Shadow: {{this.shadow}}</p>
          <p> Price:  {{this.price}}</p>
          <p> Museum phrase: {{this.museum-phrase}}</p>
        </div>
        <div class="modal-footer">
          <form method="POST" action="/catched/sea/{{this.id}}">
            <button type="submit" class="btn btn-creatures">Catched</button>            
          </form>
          <form method="POST" action="/toCatch/sea/{{this.id}}">  
           <button type="submit" class="btn btn-creatures">To catch</button>
          </form>
        </div>
      </div>
    </div>
  </div> 
{{/each}}

</div>
</div>